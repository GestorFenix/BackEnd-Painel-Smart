generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String       @id @default(uuid())
  name       String?
  email      String?      @unique
  password   String?
  dnsGroup   String?      @map("dns_group")
  isAdm      Boolean?     @default(false)
  lastLogin  DateTime?    @map("last_login")
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime?    @updatedAt @map("updated_at")
  Channels   Channels[]
  Franchises Franchises[]

  @@map("users")
}

model Franchises {
  id              Int       @id @default(autoincrement())
  name            String?
  dns             String?   @unique
  backgroundImage String?   @map("background_image")
  logoImage       String?   @map("logo_image")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime? @updatedAt @map("updated_at")
  user_id         Users     @relation(fields: [usersId], references: [id])
  usersId         String

  @@map("franhises")
}

model Channels {
  id        Int     @id @default(autoincrement())
  favorites String?
  recents   String?
  user_id   Users   @relation(fields: [usersId], references: [id])
  usersId   String

  @@map("channels")
}
