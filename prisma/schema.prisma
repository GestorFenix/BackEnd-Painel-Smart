generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String       @id @default(uuid())
  name       String?
  email      String?      @unique
  password   String?
  dnsGroup   String?      @map("dns_group")
  isAdm      Boolean?     @default(false)
  lastLogin  DateTime?    @map("last_login")
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime?    @updatedAt @map("updated_at")
  Franchises Franchises[]

  @@map("users")
}

model Franchises {
  id              Int       @id @default(autoincrement())
  name            String?
  dns             String?   @unique
  clientLimit     Int?      @map("client_limit")
  backgroundImage String?   @map("background_image")
  logoImage       String?   @map("logo_image")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime? @updatedAt @map("updated_at")
  user_id         Users     @relation(fields: [usersId], references: [id])
  usersId         String

  @@map("franchises")
}

model Clients {
  id          String     @id @default(uuid())
  mac         String?    @unique
  name        String?
  description String?
  lastLogin   DateTime?  @map("last_login")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime?  @updatedAt @map("updated_at")
  Channels    Channels[]
}

model Channels {
  id        Int     @id @default(autoincrement())
  favorites String?
  recents   String?
  clientId  Clients @relation(fields: [clientsId], references: [id])
  clientsId String

  @@map("channels")
}
